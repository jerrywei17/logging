doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		include ../includes/head.pug
		link(href="/css/index.css", rel="stylesheet")
	body
		#signinModal.modal
			.modal-dialog
				.modal-content
					form(method="POST" action="/user/signin")
						.modal-header
							h2(class="modal-title") 登入
						.modal-body
							.form-group
								label(for="signinName") 帳號：
								input#signinName.modal-input(name="name" type="text")
							.form-group
								label(for="signinPassword") 密碼：
								input#signinName.modal-input(name="password" type="password")
						.modal-footer
							button.btn(type="submit") 提交